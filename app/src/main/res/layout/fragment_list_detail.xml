<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/listDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste DetayÄ±"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/followListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takip Et"
        app:layout_constraintBottom_toBottomOf="@id/listDetailTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toEndOf="@+id/listDetailTitle"
        app:layout_constraintTop_toTopOf="@id/listDetailTitle"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/addBookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitap Ekle"
        app:layout_constraintTop_toBottomOf="@id/followListButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
