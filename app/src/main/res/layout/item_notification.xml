<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:elevation="2dp"
    android:background="@color/backgroundPrimary"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/notifications_new"
            android:contentDescription="Notification Icon"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notificationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New notification message"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/notificationSenderUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="from @username"
                android:textColor="@color/textBookInfo"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/notificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1h ago"
                android:textColor="@color/textBookInfo"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/notDeleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/notdelete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Sil"
            android:layout_marginStart="8dp"
            app:tint="@color/textBookInfo"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
